pipeline {
    
    tools {maven 'mymaven'}
    
    agent any 
    
    stages {
        
        stage ('Clone the Repo with nodejs branch') {
            
            steps {
                git branch: 'nodejs', url: 'https://github.com/vjdgithub/MultiBranchDeployment.git'
            }
            
        }
       
       }
        stage ('Build Image') {
            
            steps {
                sh 'docker build -t myappnodejs:$BUILD_NUMBER .'
            }
            
        }
        stage ('Deploy the Image') {
            
            steps {
                sh 'docker run -d -P myappnodejs:$BUILD_NUMBER'
                sh 'docker ps -a'
            }
            
        }
        
    }
}
